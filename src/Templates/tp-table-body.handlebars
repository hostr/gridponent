<table class="table" cellpadding="0" cellspacing="0">
    {{#if model.FixedHeaders}}
        {{helper colgroup}}
    {{else}}
        {{helper thead}}
    {{/if}}
    <tbody>
        {{helper tableRows}}
    </tbody>
    {{#if model.Footer}}
        <tfoot>
            <tr>
                {{#each model.Columns as |col|}}
                    <td class="footer-cell">
                        {{helper footerCell col}}
                    </td>
                {{/each}}
            </tr>
        </tfoot>
    {{/if}}
</table>